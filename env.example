# 环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# Next.js 环境
NEXTJS_ENV=production

# NextAuth.js v5 配置 (Auth.js)
AUTH_SECRET=your-auth-secret-minimum-32-characters-long
AUTH_URL=https://www.waveshift.net
AUTH_TRUST_HOST=true

# 向后兼容 (可选，支持旧版本)
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=https://www.waveshift.net

# Google OAuth 配置
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# 向后兼容 Google OAuth (可选)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 后端服务配置
NEXT_PUBLIC_BACKEND_URL=https://your-api-domain.com
NEXT_PUBLIC_BACKEND_PORT=8000

# 其他可选配置
NODE_ENV=development

# Cloudflare R2 存储配置
NEXT_PUBLIC_R2_CUSTOM_DOMAIN=https://your-r2-domain.com
NEXT_PUBLIC_R2_BUCKET_NAME=videos
R2_ENDPOINT=https://1298fa35ac940c688dc1b6d8f5eead72.r2.cloudflarestorage.com
R2_REGION=auto
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret

# Cloudflare D1数据库将通过wrangler.jsonc绑定自动提供
# DB绑定名称: DB

# 部署URL (生产环境) - 使用AUTH_URL
AUTH_URL=https://your-domain.com

# 向后兼容 (可选)
NEXTAUTH_URL=https://your-domain.com 